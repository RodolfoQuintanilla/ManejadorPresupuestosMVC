@model IEnumerable<TipoCuenta>

@{
    ViewData["Title"] = "Tipos de Cuentas";
}

<h1>Tipos de Cuentas</h1>

<h5>Tipos de Cuentas se refieren a las cuentas que se usan en el presupuesto</h5>


<a asp-action="Crear" class="btn btn-primary mb-3">Crear Tipo de Cuenta</a>

<table class="table">
    <thead>
        <tr>
            <th>Accion</th>
            <th>Nombre</th>
        </tr>
    </thead>
    <tbody id="reordenable">
        @foreach (var tipoCuenta in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-warning" asp-action="Editar" asp-route-id="@tipoCuenta.Id">Editar</a>
                    <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@tipoCuenta.Id">Eliminar</a>
                </td>
                <td>@tipoCuenta.Nombre</td>
            </tr>
        }
    </tbody>
</table>


@section scripts {
    <script>
        $(function () {
            $("#reordenable").sortable();
        })

    </script>
}