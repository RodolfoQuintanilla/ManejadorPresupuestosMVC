@model ManejoPresupuesto.Models.TipoCuenta


@{
    ViewData["Title"] = "Crear Tipo de Cuenta";
}


<h1>Crear Tipo de Cuenta</h1>

<h5>Un tipo de cuenta se refiere a una clasificación específica dentro de un sistema contable o bancario. </h5>

<div asp-validation-summary="All" class="text-danger"></div> @* ==> Validación de errores en el modelo *@

<form asp-controller="TiposCuentas" asp-action="Crear" method="post">
    <div class="form-group">
        <div class="mb-3">
            <label asp-for="Nombre"></label>
            <input type="text" asp-for="Nombre" class="form-control" />
        </div>
        <div class="mb-3"></div>
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Edad"></label>
        <input asp-for="Edad" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Url"></label>
        <input asp-for="Url" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="TarjetaDeCredito"></label>
        <input asp-for="TarjetaDeCredito" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Crear</button>

</form>